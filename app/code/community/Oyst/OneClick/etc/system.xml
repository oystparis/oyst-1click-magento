<?xml version="1.0"?>
<config>
    <tabs>
        <oyst_oneclick translate="label" module="oyst_oneclick">
            <label>Oyst</label>
            <sort_order>100</sort_order>
        </oyst_oneclick>
    </tabs>
    <sections>
        <oyst_oneclick translate="label" module="oyst_oneclick">
            <label>Oyst OneClick</label>
            <tab>oyst_oneclick</tab>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="oyst_oneclick">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label" module="oyst_oneclick">
                            <label>Enable Oyst OneClick</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <access_token translate="label" module="oyst_oneclick">
                            <label>Access Token</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </access_token>
                        <merchant_id translate="label" module="oyst_oneclick">
                            <label>Merchant Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </merchant_id>
                        <script_tag translate="label" module="oyst_oneclick">
                            <label>Script Tag</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[This field contains the script-tag used by Oyst OneClick to display his button and modal, notice that this field is populated by Oyst Back Office via Magento API. Use placeholder [MERCHANT_ID_PLACEHOLDER] to replace this placeholder by merchant id above.]]></comment>
                        </script_tag>
                        <endpoints translate="label" module="oyst_oneclick">
                            <label>Endpoints</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[This field contains the endpoints used by Oyst OneClick for manual captures and refunds, notice that this field is populated by Oyst Back Office via Magento API.]]></comment>
                        </endpoints>
                        <create_customer_on_oyst_order translate="label" module="oyst_oneclick">
                            <label>Create Customer On Oyst Order</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </create_customer_on_oyst_order>
                        <enable_invoice_auto_generation translate="label" module="oyst_oneclick">
                            <label>Enable Invoice Auto Generation</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_invoice_auto_generation>
                    </fields>
                </general>
            </groups>
        </oyst_oneclick>
    </sections>
</config>
