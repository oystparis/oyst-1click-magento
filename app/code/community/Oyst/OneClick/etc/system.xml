                            <depends>
                                <enable_global_settings>1</enable_global_settings>
                                <freepay_active>1</freepay_active>
                            </depends>
                        </cancel_url>

                        <!-- error url -->
                        <error_url translate="label,comment">
                            <label>Error URL</label>
                            <frontend_type>text</frontend_type>
