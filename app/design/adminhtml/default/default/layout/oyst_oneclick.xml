<layout version="0.1.0">
    <default>
        <reference name="notifications">
            <block type="oyst_oneclick/adminhtml_notifications" name="oyst_oneclick_notifications" as="oyst_oneclick_notifications" template="oyst/oneclick/notifications.phtml" before="-" />
        </reference>
    </default>
    <adminhtml_oneclick_actions_index>
        <reference name="head">
            <action method="addCss"><stylesheet>oyst/css/oneclick.css</stylesheet></action>
            <action method="addJs"><script>oyst/lib/progressbar.min.js</script></action>
            <action method="addJs"><script>oyst/oneclick.js</script></action>
        </reference>
        <reference name="content">
            <block type="oyst_oneclick/adminhtml_actions" name="oyst_oneclick_actions" as="oyst_oneclick_actions" template="oyst/oneclick/actions.phtml" />
        </reference>
    </adminhtml_oneclick_actions_index>
</layout>
