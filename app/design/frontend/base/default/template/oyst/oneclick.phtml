<?php
/** @var Mage_Catalog_Model_Product $product */
$product = $this->getProduct();

/** @var string $oneClickUrl */
$oneClickUrl = $this->getOneClickUrl();

/** @var Oyst_OneClick_Helper_Catalog_Data $catalogHelper */
$catalogHelper = Mage::helper('oyst_oneclick/catalog_data');

$configurableProductChildId = $catalogHelper->getConfigurableProductChildId($product);

$isProductAddtocartFormValidate = Mage::getStoreConfig("oyst/oneclick/product_addtocart_form_validate");

if ($catalogHelper->isSupportedProduct($product)) :
?>
    <div id="oyst-1click-button"></div>
    <script>
        (function () {
            if ("function" === typeof oystOneClick) {
                oystOneClick(
                    <?php echo $product->getId(); ?>,
                    <?php echo is_null($configurableProductChildId) ? 'null' : $configurableProductChildId;?>,
                    <?php echo Zend_Json::encode($oneClickUrl); ?>,
                    <?php echo $isProductAddtocartFormValidate; ?>
                );
            } else {
                console.warn("Missing function oystOneClick");
            }
        })();
    </script>
<?php endif; ?>
